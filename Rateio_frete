    #"Consultas Mescladas" = Table.NestedJoin(Personalizar1, {"CODIGO DA LOJA"}, LojasPLan, {"CODIGO"}, "LojasPLan", JoinKind.LeftOuter), 
  #"LojasPLan Expandido" = Table.ExpandTableColumn(
    #"Consultas Mescladas", 
